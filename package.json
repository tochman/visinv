{
  "name": "visinv",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:coverage": "CYPRESS_COVERAGE=true vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:parallel": "run-p cy:group:*",
    "cy:group:core": "cypress run --spec 'cypress/e2e/{clients,products,organizations}.cy.js'",
    "cy:group:invoices": "cypress run --spec 'cypress/e2e/{invoices,invoice-templates,manual-invoice-numbering}.cy.js'",
    "cy:group:features": "cypress run --spec 'cypress/e2e/{credit-invoices,payments,overdue-alerts}.cy.js'",
    "cy:group:admin": "cypress run --spec 'cypress/e2e/{admin-dashboard,admin-users,member-invitations}.cy.js'",
    "cy:group:compliance": "cypress run --spec 'cypress/e2e/swedish-compliance.cy.js'",
    "test:e2e": "cypress run --spec 'cypress/e2e/**/*.cy.js'",
    "test:e2e:parallel": "start-server-and-test dev http://localhost:5173 cy:run:parallel",
    "test:coverage": "start-server-and-test dev:coverage http://localhost:5173 'CYPRESS_COVERAGE=true cypress run'",
    "test:coverage:parallel": "start-server-and-test dev:coverage http://localhost:5173 'CYPRESS_COVERAGE=true run-p cy:group:*'",
    "coverage:report": "nyc report --reporter=text-summary --reporter=lcov",
    "coverage:check": "nyc report --check-coverage --lines 50"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js",
      "src/**/*.jsx"
    ],
    "exclude": [
      "src/main.jsx",
      "src/**/*.test.js",
      "src/**/*.spec.js"
    ],
    "report-dir": "coverage",
    "reporter": [
      "text",
      "text-summary",
      "lcov",
      "html"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@reduxjs/toolkit": "^2.11.2",
    "@stripe/stripe-js": "^8.6.3",
    "@supabase/supabase-js": "^2.91.0",
    "handlebars": "^4.7.8",
    "i18next": "^25.8.0",
    "prismjs": "^1.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.71.1",
    "react-i18next": "^16.5.3",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.12.0",
    "react-simple-code-editor": "^0.14.1"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.7",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "cypress": "^15.9.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "npm-run-all2": "^8.0.4",
    "nyc": "^17.1.0",
    "postcss": "^8.5.6",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^4.1.18",
    "vite": "^7.2.4",
    "vite-plugin-istanbul": "^7.2.1"
  }
}
